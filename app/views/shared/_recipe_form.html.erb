<%= form_for(@recipe) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
	  <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :level %>
      <%= f.collection_select :course, FormOptions::COURSES,:to_s, :to_s, :include_blank => true %>
      <%= f.label :prep_time %>
      <%= f.text_field :prep_time %>
      <%= f.label :cook_time %>
      <%= f.text_field :cook_time %>
      <%= f.label :serving %>
      <%= f.text_field :serving %>
      <%= f.label :directions %>
      <%= f.text_field :directions %>
      <%= f.label :privacy %>
      <%= f.collection_select :privacy, FormOptions::RECIPE_PRIVACY,:to_s, :to_s, :include_blank => true %>

  </div>
  <%= f.submit "Create", class: "btn btn-large btn-primary" %>
  <% end %>


