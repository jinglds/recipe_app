<% provide(:title, "Home") %>

<% if signed_in? %>

<div class="row-fluid">
  <div class="span12 ">
    <%= render 'shared/recipe_carousel' %>
    <br>
  </div>
  
</div>
<p>
  <br>
<div class="row-fluid">
  <div class="span4">
    
    <div><%= render 'shared/search_block' %></div>
    <div> <%= render 'shared/tag_cloud' %></div>
  
    
    
 
  </div>
  <div class="span8">
    <%= render 'recipes/lastest_feed' %>
  </div>
</div>

<div class="row-fluid">
  <div id="recipe_index">
  <%= render 'recipes/recipe_index' %> 
</div>
</div>


<% else %>
<div class="row-fluid">
  <div class="center hero-unit">
    <h1>Hello, fellow food-lover!</h1>

    <h2 id="hero-head">
      Say your pledge to share your food-passion with people around the world!
    </h2>

    <%= link_to "Me loves food!", signup_path,
                                class: "btn btn-warning  btn-large" %>

  </div>
</div>
<div class="row-fluid">
  <div class="span9">
    <%= render 'shared/recipe_carousel' %>
  </div>
  <div class="span3">
    
    <div><%= render 'shared/search_block' %></div>
    <div> <%= render 'shared/tag_cloud' %></div>
  
    
    
 
  </div>
  <br>



</div>

<div class="row-fluid">
  <%= render 'recipes/recipe_index' %> 
</div>

<% end %>

